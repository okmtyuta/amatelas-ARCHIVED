{
  "name": "@okmtyuta/amatelas-lit",
  "private": false,
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:lib": "tsc && vite build",
    "build:cdn": "vite --config cdn.vite.config.ts build && tsc --project cdn.tsconfig.json",
    "build": "pnpm build:lib && pnpm build:cdn",
    "preview": "vite preview"
  },
  "files": [
    "dist",
    "dist/style.css",
    "cdn",
    "cdn/style.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./style.css": {
      "import": "./dist/style.css"
    }
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@okmtyuta/_amatelas-theme": "workspace:^",
    "@okmtyuta/amatelas-css": "workspace:^",
    "@okmtyuta/amatelas-theme": "workspace:^",
    "@okmtyuta/awesome-css": "^0.0.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
